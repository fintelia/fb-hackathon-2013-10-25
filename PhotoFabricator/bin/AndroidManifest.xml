<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.photofabricator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.photofabricator.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.photofabricator.DrawActivity2"
            android:label="@string/title_activity_activity2" >
        </activity>
        <activity android:name="com.example.photofabricator.DrawActivity1" >
        </activity>
        <activity android:name="com.example.photofabricator.TakePicturesActivity" >
        </activity>
        <activity
            android:name="com.example.photofabricator.PhotoActivity2"
            android:label="@string/title_activity_photo_activity2" >
        </activity>
    </application>

</manifest>